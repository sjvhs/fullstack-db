{
  "version": "0.2.0",
  "compounds": [
    {
      "name": "Full Stack Dev",
      "configurations": ["Backend", "Frontend", "Browser"]
    }
  ],
  "configurations": [
    {
      "name": "Backend",
      "type": "pwa-node",
      "request": "launch",
      "program": "${workspaceFolder}/backend/index.js",
      "cwd": "${workspaceFolder}/backend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "restart": true,
      "port": 9229
    },
    {
      "name": "Frontend",
      "type": "pwa-node",
      "request": "launch",
      "cwd": "${workspaceFolder}/frontend",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run", "dev"],
      "console": "integratedTerminal",
      "restart": true
    },
    {
      "name": "Browser",
      "type": "pwa-chrome",
      "request": "launch",
      "url": "http://localhost:5173",
      "webRoot": "${workspaceFolder}/frontend"
    }
  ]
}
